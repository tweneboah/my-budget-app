<% include partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
          
             <h1>Welcome To iBudget!</h1>
             <p>View all Budgets</p>
             <p>
                <a class="btn btn-primary btn-large" href="/budget/new">Add Budget</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% budgets.forEach(function(budget){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= budget.image %>">
                   <div class="caption">
                       <h4>Income: <%= budget.income %></h4>
                   </div>

                   <div class="caption">
                       <h4>Expenses: <%= budget.expenses %></h4>
                   </div>


                   
                   <p>
                       <a href="/budget/<%=budget._id%>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
