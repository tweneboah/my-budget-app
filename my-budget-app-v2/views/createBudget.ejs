<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a Budget</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="income" placeholder="income">
                </div>

                 <div class="form-group">
                    <input class="form-control" type="text" name="expense" placeholder="Expense">
                </div>

                   <div class="form-group">
                    <input class="form-control" type="textarea" name="description" placeholder="Enter Description">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="receiptImage" placeholder="Receipt Image">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Creat Budget!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>