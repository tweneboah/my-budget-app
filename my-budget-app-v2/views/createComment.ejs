<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create Comment <%=budget._id%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/budget/<%=budget._id%>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="Text">
                </div>

                 <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="Text">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Creat Comment!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
